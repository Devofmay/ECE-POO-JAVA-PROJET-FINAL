<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fr.ece.javaprojetfinal.InsideProjetAdminController"
      spacing="0">

    <!-- ESPACE POUR LES BOUTONS WINDOWS -->
    <padding>
        <Insets top="10"/>
    </padding>

    <children>

        <!-- SCROLLPANE RESPONSIVE -->
        <ScrollPane fitToHeight="true"
                    fitToWidth="true"
                    hbarPolicy="AS_NEEDED"
                    vbarPolicy="NEVER"
                    style="-fx-background-color: transparent; -fx-background: transparent;"
                    VBox.vgrow="ALWAYS">

            <content>

                <!-- PAGE 1300px LARGEUR FIXE (ALIGNÉE AVEC TON MODÈLE VALIDÉ) -->
                <BorderPane prefWidth="1250"
                            minWidth="1250"
                            maxWidth="1300"
                            prefHeight="700">

                    <!-- HEADER -->
                    <top>
                        <HBox alignment="CENTER"
                              spacing="12"
                              style="-fx-padding:12; -fx-background-color: linear-gradient(to right, #4b6cb7, #182848);">

                            <children>

                                <Label text="Project Manager" style="-fx-text-fill:white;">
                                    <font><Font size="20"/></font>
                                </Label>

                                <TextField fx:id="projectNameField"
                                           editable="false"
                                           promptText="Nom du projet"
                                           style="-fx-background-color: transparent;
                                                  -fx-text-fill: white;
                                                  -fx-border-color: transparent;
                                                  -fx-pref-width:250;">
                                    <font><Font size="16"/></font>
                                </TextField>

                                <Region HBox.hgrow="ALWAYS"/>

                            </children>
                        </HBox>
                    </top>

                    <!-- SIDEBAR -->
                    <left>
                        <VBox alignment="TOP_CENTER"
                              spacing="18"
                              style="-fx-padding:18;
                                     -fx-background-color: linear-gradient(to bottom, #1f3c88, #254a9b);
                                     -fx-pref-width:220;">

                            <children>

                                <StackPane alignment="CENTER" prefHeight="120">
                                    <children>
                                        <Circle radius="40"
                                                style="-fx-fill: linear-gradient(#ffffff44, #ffffff11);
                                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35),8,0,0,2);"/>
                                        <Label fx:id="usernameField"
                                               style="-fx-text-fill: white; -fx-font-weight: bold;"
                                               text="Utilisateur"/>
                                    </children>
                                </StackPane>

                                <!-- NAVIGATION -->
                                <VBox alignment="TOP_CENTER" spacing="8" style="-fx-padding:6;">
                                    <children>

                                        <Button fx:id="projetsbtn" text="Projets" prefWidth="180"
                                                style="-fx-background-color: transparent;
                                                       -fx-text-fill: white;
                                                       -fx-border-color: rgba(255,255,255,0.12);
                                                       -fx-border-radius:8;
                                                       -fx-padding:8 10;"/>

                                        <Button fx:id="tachesbtn" text="Tâches" prefWidth="180"
                                                style="-fx-background-color: transparent;
                                                       -fx-text-fill: white;
                                                       -fx-border-color: rgba(255,255,255,0.12);
                                                       -fx-border-radius:8;
                                                       -fx-padding:8 10;"/>

                                        <Button fx:id="calendrierbtn" text="Planning" prefWidth="180"
                                                style="-fx-background-color: transparent;
                                                       -fx-text-fill: white;
                                                       -fx-border-color: rgba(255,255,255,0.12);
                                                       -fx-border-radius:8;
                                                       -fx-padding:8 10;"/>

                                    </children>
                                </VBox>

                                <Region VBox.vgrow="ALWAYS"/>

                                <Button fx:id="logoutbtn" text="Déconnexion" prefWidth="180"
                                        style="-fx-background-color:#C74444;
                                               -fx-text-fill:white;
                                               -fx-background-radius:8;
                                               -fx-padding:8 10;"/>

                            </children>

                        </VBox>
                    </left>

                    <!-- CONTENU CENTRAL -->
                    <center>
                        <VBox spacing="20"
                              style="-fx-padding:25; -fx-background-color:#F6F8FF;">

                            <children>

                                <!-- TITRE -->
                                <Label text="Tâches du projet" style="-fx-text-fill:#1f2b59;">
                                    <font><Font size="18"/></font>
                                </Label>

                                <!-- TABLE TÂCHES -->
                                <TableView fx:id="tasksTable"
                                           prefHeight="300"
                                           style="-fx-background-color:white;
                                                  -fx-background-radius:8;
                                                  -fx-border-radius:8;">
                                    <columns>
                                        <TableColumn fx:id="taskNameColumn" text="Tâche" prefWidth="200"/>
                                        <TableColumn fx:id="creationDateColumn" text="Date de création" prefWidth="150"/>
                                        <TableColumn fx:id="dueDateColumn" text="Date d'échéance" prefWidth="150"/>
                                        <TableColumn fx:id="ownerColumn" text="Responsable" prefWidth="170"/>
                                        <TableColumn fx:id="statusColumn" text="Statut" prefWidth="140"/>
                                    </columns>
                                </TableView>

                                <!-- COLLABORATEURS -->
                                <VBox spacing="10">
                                    <children>

                                        <Label text="Collaborateurs du projet"
                                               style="-fx-text-fill:#1f2b59;">
                                            <font><Font size="16"/></font>
                                        </Label>

                                        <ListView fx:id="collaboratorsList"
                                                  prefHeight="100"
                                                  style="-fx-background-color:white;
                                                         -fx-background-radius:8;
                                                         -fx-border-radius:8;"/>

                                    </children>
                                </VBox>

                            </children>

                        </VBox>
                    </center>

                </BorderPane>

            </content>

        </ScrollPane>

    </children>

</VBox>
