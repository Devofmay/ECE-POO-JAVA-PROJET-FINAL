<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fr.ece.javaprojetfinal.basics.ParametresMonComptecontroller"
      spacing="0">

    <!-- ESPACE POUR LES BOUTONS WINDOWS -->
    <padding>
        <Insets top="10"/>
    </padding>

    <children>

        <!-- SCROLLPANE RESPONSIVE -->
        <ScrollPane fitToWidth="true"
                    fitToHeight="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    style="-fx-background-color: transparent; -fx-background: transparent;"
                    VBox.vgrow="ALWAYS">

            <content>

                <!-- PAGE CENTRÉE 1300px -->
                <BorderPane prefWidth="1300"
                            minWidth="1200"
                            maxWidth="1300"
                            prefHeight="700">

                    <!-- HEADER -->
                    <top>
                        <HBox alignment="CENTER_LEFT" spacing="12"
                              style="-fx-padding:12;
                                     -fx-background-color: linear-gradient(to right, #4b6cb7, #182848);">

                            <Label text="Project Manager" style="-fx-text-fill:white;">
                                <font><Font size="20"/></font>
                            </Label>

                            <Region HBox.hgrow="ALWAYS"/>

                            <Button fx:id="logoutbtn"
                                    text="Déconnexion"
                                    style="-fx-background-color: transparent;
                                           -fx-text-fill:white;
                                           -fx-border-color: rgba(255,255,255,0.2);
                                           -fx-border-radius:6;
                                           -fx-padding:6 12;">
                                <tooltip><Tooltip text="Se déconnecter"/></tooltip>
                            </Button>

                        </HBox>
                    </top>


                    <!-- SIDEBAR -->
                    <left>
                        <VBox spacing="18" alignment="TOP_CENTER"
                              style="-fx-padding:18;
                                     -fx-background-color: linear-gradient(to bottom, #1f3c88, #254a9b);
                                     -fx-pref-width:220;">

                            <!-- Avatar -->
                            <StackPane alignment="CENTER" prefHeight="120">
                                <Circle radius="40"
                                        style="-fx-fill: linear-gradient(#ffffff44,#ffffff11);
                                               -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.35),8,0,0,2);"/>
                                <Label fx:id="usernameField"
                                       text="Utilisateur"
                                       style="-fx-text-fill:white; -fx-font-weight:bold;"/>
                            </StackPane>

                            <!-- Menu -->
                            <VBox alignment="TOP_CENTER" spacing="8" style="-fx-padding:6;">
                                <Button fx:id="projetsbtn" text="Projets" prefWidth="180"
                                        style="-fx-background-color: transparent;
                                               -fx-text-fill:white;
                                               -fx-border-color: rgba(255,255,255,0.12);
                                               -fx-border-radius:8; -fx-padding:8 10;"/>

                                <Button fx:id="tachesbtn" text="Tâches" prefWidth="180"
                                        style="-fx-background-color: transparent;
                                               -fx-text-fill:white;
                                               -fx-border-color: rgba(255,255,255,0.12);
                                               -fx-border-radius:8; -fx-padding:8 10;"/>

                                <Button fx:id="calendrierbtn" text="Calendrier" prefWidth="180"
                                        style="-fx-background-color: transparent;
                                               -fx-text-fill:white;
                                               -fx-border-color: rgba(255,255,255,0.12);
                                               -fx-border-radius:8; -fx-padding:8 10;"/>
                            </VBox>

                            <Region VBox.vgrow="ALWAYS"/>

                            <Button text="Paramètres" prefWidth="180"
                                    style="-fx-background-radius:8;
                                           -fx-background-color: rgba(255,255,255,0.06);
                                           -fx-text-fill:white;
                                           -fx-padding:8 10;"/>
                        </VBox>
                    </left>


                    <!-- MAIN CONTENT -->
                    <center>
                        <VBox spacing="20"
                              style="-fx-padding:25; -fx-background-color:#F6F8FF;">

                            <!-- Title -->
                            <HBox alignment="CENTER_LEFT" spacing="12">
                                <Label text="Paramètres du compte"
                                       style="-fx-text-fill:#1f2b59;">
                                    <font><Font size="20"/></font>
                                </Label>

                                <Region HBox.hgrow="ALWAYS"/>

                                <Button fx:id="retourBtn"
                                        text="Retour"
                                        style="-fx-background-color:#5A6FA8;
                                               -fx-text-fill:white;
                                               -fx-background-radius:8;
                                               -fx-padding:6 16;"/>
                            </HBox>


                            <!-- FORM CARD -->
                            <VBox spacing="18"
                                  maxWidth="650"
                                  style="-fx-background-color:white;
                                         -fx-background-radius:12;
                                         -fx-padding:20;
                                         -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.12),12,0,0,2);">


                                <!-- Nom -->
                                <VBox spacing="6">
                                    <Label text="Nom" style="-fx-text-fill:#1f2b59; -fx-font-weight:bold;"/>
                                    <TextField fx:id="nomField" editable="false"
                                               style="-fx-background-color:#e6e6e6;
                                                      -fx-background-radius:8; -fx-padding:8;"/>
                                </VBox>

                                <!-- Adresse -->
                                <VBox spacing="6">
                                    <Label text="Adresse" style="-fx-text-fill:#1f2b59; -fx-font-weight:bold;"/>
                                    <TextField fx:id="adresseField" editable="false"
                                               style="-fx-background-color:#e6e6e6;
                                                      -fx-background-radius:8; -fx-padding:8;"/>
                                </VBox>

                                <!-- Mot de passe -->
                                <VBox spacing="6">
                                    <Label text="Mot de passe"
                                           style="-fx-text-fill:#1f2b59; -fx-font-weight:bold;"/>
                                    <TextField fx:id="passwordField" editable="false"
                                               style="-fx-background-color:#e6e6e6;
                                                      -fx-background-radius:8; -fx-padding:8;"/>
                                </VBox>

                                <!-- Confirmation -->
                                <VBox spacing="6">
                                    <Label text="Confirmer le mot de passe"
                                           style="-fx-text-fill:#1f2b59; -fx-font-weight:bold;"/>
                                    <TextField fx:id="passwordField1" editable="false"
                                               style="-fx-background-color:#e6e6e6;
                                                      -fx-background-radius:8; -fx-padding:8;"/>
                                </VBox>


                                <!-- Buttons -->
                                <HBox alignment="CENTER_RIGHT" spacing="12">
                                    <Button fx:id="annulerBtn"
                                            text="Annuler"
                                            style="-fx-background-color:#888;
                                                   -fx-text-fill:white;
                                                   -fx-background-radius:8;
                                                   -fx-padding:8 14;"/>

                                    <Button fx:id="enregistrerBtn"
                                            text="Enregistrer"
                                            style="-fx-background-color:#4A9D5F;
                                                   -fx-text-fill:white;
                                                   -fx-background-radius:8;
                                                   -fx-padding:8 18;
                                                   -fx-font-weight:bold;"/>
                                </HBox>

                            </VBox>

                        </VBox>
                    </center>

                </BorderPane>

            </content>

        </ScrollPane>

    </children>

</VBox>
