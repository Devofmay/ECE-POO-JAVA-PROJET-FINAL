<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.ece.javaprojetfinal.basics.CalendarController">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-padding:12; -fx-background-color: #1C399C;">
            <children>
                <Label style="-fx-text-fill: #EFE8E8;" text="Calendrier">
                    <font><Font size="24" /></font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </top>

    <!-- Sidebar -->
    <left>
        <VBox alignment="TOP_CENTER" spacing="18" style="-fx-padding:18; -fx-background-color: #1C399C; -fx-pref-width:220;">
            <children>
                <StackPane alignment="CENTER" prefHeight="120">
                    <children>
                        <Circle radius="40" style="-fx-fill: linear-gradient(#ffffff44, #ffffff11); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35),8,0,0,2);" />
                        <Label fx:id="usernameSpot" style="-fx-text-fill: #EFE8E8; -fx-font-weight: bold;" text="Utilisateur" />
                    </children>
                </StackPane>

                <Region VBox.vgrow="ALWAYS" />

                <Button prefWidth="180" style="-fx-background-radius:8; -fx-background-color: #EFE8E822; -fx-text-fill: #EFE8E8; -fx-padding:8 10;" text="Paramètres" />
            </children>
        </VBox>
    </left>

    <!-- Main content -->
    <center>
        <VBox spacing="14" style="-fx-padding:20; -fx-background-color: #F6F8FF;">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-text-fill: #1f15b5;" text="Mon calendrier">
                        <font><Font size="18" /></font>
                    </Label>
                    <Region HBox.hgrow="ALWAYS" />
                    <TextField promptText="Rechercher un événement..." style="-fx-pref-width:320; -fx-background-radius:8; -fx-border-radius:8; -fx-padding:8;" />
                </HBox>

                <!-- Container pour CalendarFX -->
                <AnchorPane fx:id="calendarContainer" style="-fx-background-color: #ffffff; -fx-border-radius:12; -fx-background-radius:12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15),8,0,0,2);" />
            </children>
        </VBox>
    </center>

</BorderPane>
