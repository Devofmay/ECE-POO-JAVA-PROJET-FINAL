<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fr.ece.javaprojetfinal.InsideProjetAdminController"
      spacing="0">

    <padding>
        <Insets top="10"/>
    </padding>

    <children>
        <ScrollPane fitToHeight="true" fitToWidth="true"
                    hbarPolicy="AS_NEEDED" vbarPolicy="NEVER"
                    style="-fx-background-color: transparent; -fx-background: transparent;"
                    VBox.vgrow="ALWAYS">

            <content>
                <BorderPane prefWidth="1300"
                            minWidth="1200"
                            maxWidth="1300"
                            prefHeight="700">

                    <!-- HEADER -->
                    <top>
                        <HBox spacing="12" alignment="CENTER_LEFT"
                              style="-fx-padding:12; -fx-background-color: linear-gradient(to right, #4b6cb7, #182848);">

                            <children>
                                <Label text="Project Manager" style="-fx-text-fill:white;">
                                    <font><Font size="20"/></font>
                                </Label>

                                <Region HBox.hgrow="ALWAYS"/>

                                <TextField fx:id="projectNameField"
                                           editable="false"
                                           promptText="Nom du projet"
                                           style="-fx-background-color: transparent;
                                                  -fx-text-fill: white;
                                                  -fx-border-color: transparent;
                                                  -fx-pref-width:250;"/>

                                <Button fx:id="modifprojet" text="Modifier le projet"
                                        style="-fx-background-color: rgba(255,255,255,0.15);
                                               -fx-text-fill:white;
                                               -fx-background-radius:6;
                                               -fx-padding:6 12;"/>

                                <Button fx:id="supprprojet" text="Supprimer le projet"
                                        style="-fx-background-color:#C74444;
                                               -fx-text-fill:white;
                                               -fx-background-radius:6;
                                               -fx-padding:6 12;"/>

                                <Button fx:id="ajoutertache" text="Ajouter une tâche"
                                        style="-fx-background-color:#4A9D5F;
                                               -fx-text-fill:white;
                                               -fx-background-radius:6;
                                               -fx-padding:6 12;
                                               -fx-font-weight:bold;"/>

                                <Button fx:id="logoutBtn" text="Déconnexion"
                                        style="-fx-background-color: transparent; -fx-text-fill: white;
                                               -fx-border-color: rgba(255,255,255,0.3);
                                               -fx-border-radius:6; -fx-background-radius:6;
                                               -fx-padding:6 14;" />
                            </children>
                        </HBox>
                    </top>

                    <!-- SIDEBAR -->
                    <left>
                        <VBox alignment="TOP_CENTER" spacing="18"
                              style="-fx-padding:18;
                                     -fx-background-color: linear-gradient(to bottom, #1f3c88, #254a9b);
                                     -fx-pref-width:220;">

                            <children>
                                <StackPane alignment="CENTER" prefHeight="120">
                                    <children>
                                        <Circle radius="40"
                                                style="-fx-fill: linear-gradient(#ffffff44,#ffffff11);
                                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35),8,0,0,2);"/>
                                        <Label  fx:id="usernameSpot"
                                                text="Admin"
                                               style="-fx-text-fill:white; -fx-font-weight:bold;"/>
                                    </children>
                                </StackPane>

                                <VBox alignment="TOP_CENTER" spacing="8" style="-fx-padding:6;">
                                    <children>
                                        <Button fx:id="projetsbtn" text="Projets" prefWidth="180"
                                                style="-fx-background-color: transparent;
                                                       -fx-text-fill:white;
                                                       -fx-border-color: rgba(255,255,255,0.12);
                                                       -fx-border-radius:8;
                                                       -fx-padding:8 10;"/>

                                        <Button fx:id="collabobtn" text="Collaborateurs" prefWidth="180"
                                                style="-fx-background-color: transparent;
                                                       -fx-text-fill:white;
                                                       -fx-border-color: rgba(255,255,255,0.12);
                                                       -fx-border-radius:8;
                                                       -fx-padding:8 10;"/>

                                        <Button fx:id="calendrierbtn" text="Planning" prefWidth="180"
                                                style="-fx-background-color: transparent;
                                                       -fx-text-fill:white;
                                                       -fx-border-color: rgba(255,255,255,0.12);
                                                       -fx-border-radius:8;
                                                       -fx-padding:8 10;"/>
                                    </children>
                                </VBox>

                                <Region VBox.vgrow="ALWAYS"/>

                                <Button fx:id="parametresBtn" text="Paramètres" prefWidth="180"
                                        style="-fx-background-color: transparent;
                                               -fx-text-fill:white;
                                               -fx-border-color: rgba(255,255,255,0.12);
                                               -fx-border-radius:8;
                                               -fx-padding:10 12;"/>
                            </children>
                        </VBox>
                    </left>

                    <!-- CONTENU CENTRAL -->
                    <center>
                        <VBox spacing="20"
                              style="-fx-padding:25; -fx-background-color:#F6F8FF;">

                            <children>
                                <HBox spacing="15" alignment="CENTER_LEFT">
                                    <children>
                                        <VBox spacing="6" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label text="Tâches du projet" style="-fx-text-fill:#1f2b59;">
                                                    <font><Font size="22"/></font>
                                                </Label>
                                                <Label text="Gestion complète des tâches et collaborateurs"
                                                       style="-fx-text-fill:#6b7280;">
                                                    <font><Font size="13"/></font>
                                                </Label>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>

                                <TableView fx:id="tasksTable" VBox.vgrow="ALWAYS"
                                           style="-fx-background-color:white;
                                                  -fx-background-radius:8;
                                                  -fx-border-radius:8;">
                                    <columns>
                                        <TableColumn fx:id="taskNameColumn" text="Nom de la tâche" prefWidth="200"/>
                                        <TableColumn fx:id="creationDateColumn" text="Date de création" prefWidth="150"/>
                                        <TableColumn fx:id="dueDateColumn" text="Date d'échéance" prefWidth="150"/>
                                        <TableColumn fx:id="ownerColumn" text="Responsable" prefWidth="150"/>
                                        <TableColumn fx:id="statusColumn" text="Statut" prefWidth="120"/>
                                        <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="200"/>
                                    </columns>
                                </TableView>

                                <VBox spacing="10">
                                    <children>
                                        <Label text="Collaborateurs du projet" style="-fx-text-fill:#1f2b59;">
                                            <font><Font size="18"/></font>
                                        </Label>
                                        <ListView fx:id="collaboratorsList" prefHeight="120"
                                                  style="-fx-background-color:white;
                                                         -fx-background-radius:8;
                                                         -fx-border-radius:8;"/>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </center>

                </BorderPane>
            </content>
        </ScrollPane>
    </children>
</VBox>
