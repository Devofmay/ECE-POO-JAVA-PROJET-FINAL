<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fr.ece.javaprojetfinal.InsideCollabocontroller"
      spacing="0">

    <padding>
        <Insets top="10"/>
    </padding>

    <children>
        <ScrollPane fitToHeight="true" fitToWidth="true"
                    hbarPolicy="AS_NEEDED" vbarPolicy="NEVER"
                    style="-fx-background-color: transparent; -fx-background: transparent;"
                    VBox.vgrow="ALWAYS">

            <content>
                <BorderPane prefWidth="1300"
                            minWidth="1200"
                            maxWidth="1300"
                            prefHeight="700">

                    <!-- HEADER -->
                    <top>
                        <HBox alignment="CENTER_LEFT" spacing="12"
                              style="-fx-padding:12; -fx-background-color: linear-gradient(to right, #4b6cb7, #182848);">

                            <children>
                                <Label text="Project Manager" style="-fx-text-fill:white;">
                                    <font><Font size="20"/></font>
                                </Label>

                                <Region HBox.hgrow="ALWAYS"/>

                                <Button fx:id="ajoutertache" text="Ajouter un collaborateur"
                                        style="-fx-background-color:#4A9D5F;
                                               -fx-text-fill:white;
                                               -fx-background-radius:6;
                                               -fx-padding:6 12;
                                               -fx-font-weight:bold;"/>
                            </children>
                        </HBox>
                    </top>

                    <!-- SIDEBAR -->
                    <left>
                        <VBox alignment="TOP_CENTER" spacing="18"
                              style="-fx-padding:18;
                                     -fx-background-color: linear-gradient(to bottom, #1f3c88, #254a9b);
                                     -fx-pref-width:220;">

                            <children>
                                <StackPane alignment="CENTER" prefHeight="120">
                                    <children>
                                        <Circle radius="40"
                                                style="-fx-fill: linear-gradient(#ffffff44,#ffffff11);
                                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35),8,0,0,2);"/>
                                        <Label fx:id="usernameSpot"
                                                text="Admin"
                                               style="-fx-text-fill:white; -fx-font-weight:bold;"/>
                                    </children>
                                </StackPane>

                                <VBox alignment="TOP_CENTER" spacing="8" style="-fx-padding:6;">
                                    <children>
                                        <Button fx:id="projetsbtn" text="Projets" prefWidth="180"
                                                style="-fx-background-color: transparent;
                                                       -fx-text-fill:white;
                                                       -fx-border-color: rgba(255,255,255,0.12);
                                                       -fx-border-radius:8;
                                                       -fx-padding:8 10;"/>

                                        <Button text="Collaborateurs" prefWidth="180"
                                                style="-fx-background-color: rgba(255,255,255,0.15);
                                                       -fx-text-fill:white;
                                                       -fx-background-radius:8;
                                                       -fx-padding:8 10;"/>

                                        <Button fx:id="calendrierbtn" text="Planning" prefWidth="180"
                                                style="-fx-background-color: transparent;
                                                       -fx-text-fill:white;
                                                       -fx-border-color: rgba(255,255,255,0.12);
                                                       -fx-border-radius:8;
                                                       -fx-padding:8 10;"/>
                                    </children>
                                </VBox>

                                <Region VBox.vgrow="ALWAYS"/>

                                <Button fx:id="logoutBtn"
                                        text="Déconnexion" prefWidth="180"
                                        style="-fx-background-color:#C74444;
                                               -fx-text-fill:white;
                                               -fx-background-radius:8;
                                               -fx-padding:10 12;"/>
                            </children>
                        </VBox>
                    </left>

                    <!-- CONTENU CENTRAL -->
                    <center>
                        <VBox spacing="20"
                              style="-fx-padding:25; -fx-background-color:#F6F8FF;">

                            <children>
                                <Label text="Gestion des collaborateurs" style="-fx-text-fill:#1f2b59;">
                                    <font><Font size="22"/></font>
                                </Label>

                                <TableView fx:id="tasksTable" VBox.vgrow="ALWAYS"
                                           style="-fx-background-color:white;
                                                  -fx-background-radius:8;
                                                  -fx-border-radius:8;">
                                    <columns>
                                        <TableColumn fx:id="taskNameColumn" text="Nom" prefWidth="200"/>
                                        <TableColumn fx:id="creationDateColumn" text="Adresse" prefWidth="200"/>
                                        <TableColumn fx:id="dueDateColumn" text="Rôle" prefWidth="150"/>
                                        <TableColumn fx:id="ownerColumn" text="Mot de passe" prefWidth="150"/>
                                        <TableColumn fx:id="editColumn" text="Actions" prefWidth="200"/>
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </center>

                </BorderPane>
            </content>
        </ScrollPane>
    </children>
</VBox>
