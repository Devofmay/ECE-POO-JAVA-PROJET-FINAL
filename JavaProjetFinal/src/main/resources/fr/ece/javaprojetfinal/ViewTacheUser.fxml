<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="560" prefWidth="900"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.ece.javaprojetfinal.ViewTacheUsercontroller">

    <!-- HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12"
              style="-fx-padding:12; -fx-background-color: linear-gradient(to right, #4b6cb7, #182848);">
            <children>
                <Label text="Project Manager" style="-fx-text-fill: white;">
                    <font><Font size="20" /></font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Button text="Déconnexion"
                        style="-fx-background-color: transparent; -fx-text-fill: white;
                               -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius:6; -fx-padding:6 12;" />
            </children>
        </HBox>
    </top>

    <!-- SIDEBAR -->
    <left>
        <VBox alignment="TOP_CENTER" spacing="18"
              style="-fx-padding:18; -fx-background-color: linear-gradient(to bottom, #1f3c88, #254a9b);
                     -fx-pref-width:220;">
            <children>
                <StackPane alignment="CENTER" prefHeight="120">
                    <children>
                        <Circle radius="40"
                                style="-fx-fill: linear-gradient(#ffffff44, #ffffff11);
                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35),8,0,0,2);" />
                        <Label text="Utilisateur" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                    </children>
                </StackPane>

                <VBox alignment="TOP_CENTER" spacing="8" style="-fx-padding:6;">
                    <children>
                        <Button fx:id="tachebtn" text="Tâches" prefWidth="180"
                                style="-fx-background-color: transparent; -fx-text-fill: white;
                                       -fx-border-color: rgba(255,255,255,0.12); -fx-border-radius:8;
                                       -fx-padding:8 10;" />
                        <Button text="Projets" prefWidth="180"
                                style="-fx-background-color: transparent; -fx-text-fill: white;
                                       -fx-border-color: rgba(255,255,255,0.12); -fx-border-radius:8;
                                       -fx-padding:8 10;" />
                        <Button text="Calendrier" prefWidth="180"
                                style="-fx-background-color: transparent; -fx-text-fill: white;
                                       -fx-border-color: rgba(255,255,255,0.12); -fx-border-radius:8;
                                       -fx-padding:8 10;" />
                    </children>
                </VBox>

                <Region VBox.vgrow="ALWAYS" />

                <Button text="Paramètres" prefWidth="180"
                        style="-fx-background-radius:8; -fx-background-color: rgba(255,255,255,0.06);
                               -fx-text-fill: white; -fx-padding:8 10;" />
            </children>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <VBox spacing="18" style="-fx-padding:20; -fx-background-color:#F6F8FF;">
            <children>

                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label text="Détails de la tâche" style="-fx-text-fill:#1f2b59;">
                            <font><Font size="22"/></font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button text="Fermer" style="-fx-background-color:#5A6FA8; -fx-text-fill:white; -fx-background-radius:8; -fx-padding:6 16;"
                                onAction="#closeWindow"/>
                    </children>
                </HBox>

                <VBox maxWidth="750" spacing="18"
                      style="-fx-background-color:white; -fx-padding:18; -fx-background-radius:12;
                             -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.12),12,0,0,2);">

                    <!-- Name -->
                    <VBox spacing="6">
                        <Label text="Nom de la tâche" style="-fx-text-fill:#1f2b59; -fx-font-weight:bold;" />
                        <Label fx:id="nameLabel" text="-" style="-fx-text-fill:#1f2b59;" />
                    </VBox>

                    <!-- Project -->
                    <VBox spacing="6">
                        <Label text="Projet" style="-fx-text-fill:#1f2b59; -fx-font-weight:bold;" />
                        <Label fx:id="projectLabel" text="-" style="-fx-text-fill:#1f2b59;" />
                    </VBox>

                    <!-- Description -->
                    <VBox spacing="6">
                        <Label text="Description" style="-fx-text-fill:#1f2b59; -fx-font-weight:bold;" />
                        <TextArea fx:id="descriptionArea" prefRowCount="6" wrapText="true" editable="false"/>
                    </VBox>

                    <!-- Row: Date / Responsable / Statut / Priorité -->
                    <HBox spacing="20">
                        <VBox spacing="6" HBox.hgrow="ALWAYS">
                            <Label text="Date d'échéance" style="-fx-text-fill:#1f2b59; -fx-font-weight:bold;" />
                            <Label fx:id="dateLabel" text="-" />
                        </VBox>

                        <VBox spacing="6" HBox.hgrow="ALWAYS">
                            <Label text="Responsable" style="-fx-text-fill:#1f2b59; -fx-font-weight:bold;" />
                            <Label fx:id="responsableLabel" text="-" />
                        </VBox>

                        <VBox spacing="6" HBox.hgrow="ALWAYS">
                            <Label text="Statut" style="-fx-text-fill:#1f2b59; -fx-font-weight:bold;" />
                            <Label fx:id="statutLabel" text="-" />
                        </VBox>

                        <VBox spacing="6" HBox.hgrow="ALWAYS">
                            <Label text="Priorité" style="-fx-text-fill:#1f2b59; -fx-font-weight:bold;" />
                            <Label fx:id="prioriteLabel" text="-" />
                        </VBox>
                    </HBox>

                </VBox>
            </children>
        </VBox>
    </center>

</BorderPane>
